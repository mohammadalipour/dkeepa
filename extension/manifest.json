{
    "manifest_version": 3,
    "name": "Keepa - Digikala Price Tracker",
    "version": "1.0.0",
    "description": "Track price history for Digikala products",
    "permissions": [
        "storage",
        "alarms"
    ],
    "host_permissions": [
        "https://www.digikala.com/*",
        "http://localhost:8080/*"
    ],
    "background": {
        "service_worker": "src/background/index.ts",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.digikala.com/product/*"
            ],
            "js": [
                "src/content/index.tsx"
            ]
        }
    ],
    "action": {
        "default_popup": "src/popup/index.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}